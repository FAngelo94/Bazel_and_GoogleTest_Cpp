    "version": "0.2.0",
    "configurations": [
        {
            "name": "BazelTutorial",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "preLaunchTask": "Build BazelTutorial (Debug)",
            "program": "${workspaceFolder}/bazel-out/k8-dbg/bin/src/mainfolder/bazeltarget",
            "cwd": "${workspaceFolder}/bazel-out/k8-dbg/bin/src/mainfolder/bazeltarget.runfiles/__main__",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}